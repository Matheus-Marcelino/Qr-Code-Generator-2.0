BoxLayout:
    orientation: 'horizontal'
    FloatLayout:
        MDIconButton:
            pos_hint:{'center_x': 0.5, 'center_y': 0.85}
            icon_size: 110
            icon: 'qrcode'
        MDTextField:
            pos_hint:{'center_x': 0.5, 'center_y': 0.64}
            id: first_text
            size_hint_x: 0.77
            mode: 'line'
            hint_text: 'Type the Text'
            icon_right: 'pencil'
        MDIconButton:
            pos_hint:{'center_x': 0.5, 'center_y': 0.53}
            icon_size: 35
            icon: 'arrow-down-bold-circle'
            on_press: app.copy()
        MDTextField:
            pos_hint:{'center_x': 0.5, 'center_y': 0.45}
            id: rewrite_text
            size_hint_x: 0.77
            mode: 'line'
            hint_text: 'Rewrite the Text'
            icon_right: 'pencil'
        MDCheckbox:
            id: clear
            pos_hint:{'center_x': 0.667, 'center_y': 0.35}
            size_hint: None, None
            size: 20, 20
            on_active: app.check_clear(*args)
        Label:
            text: 'Clear Text'
            pos_hint:{'center_x': 0.78, 'center_y': 0.35}
        MDCheckbox:
            pos_hint:{'center_x': 0.15, 'center_y': 0.35}
            size_hint: None, None
            size: 20, 20
            on_active: app.check_open_image(*args)
        Label:
            text: 'Open Image'
            pos_hint:{'center_x': 0.284, 'center_y': 0.35}

        MDRectangleFlatButton:
            pos_hint:{'center_x': 0.5, 'center_y': 0.25}
            text: 'Generate QR'
            text_color: 'white'
            md_bg_color: '#2096f2'
            size_hint_x: .7
            on_press: app.generate()

    Image:
        id: img
        color: '#121212'